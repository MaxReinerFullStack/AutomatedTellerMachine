@model IEnumerable<AutomatedTellerMachine.Models.CheckingAccountModel>

@{ 
    ViewBag.Title = "List";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User.Pin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Balance)
        </th>
        <th></th>
        </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.User.Pin)
        </td>
        <td>
            @Html.DisplayFor(model => item.AccountNumber)
        </td>
        <td>
            @Html.DisplayFor(model => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(model => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(model => item.Balance)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Detail", "DetailsForAdmin", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
        </td>
    </tr>
    }
</table>

